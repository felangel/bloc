{
  "New freezed state": {
    "prefix": "fstate",
    "body": "const factory ${TM_FILENAME_BASE/(.*)/${1:/pascalcase}/g}.${1:stateName}($2) = _${1/(.*)/${1:/capitalize}/};\n$3"
  },
  "New freezed event": {
    "prefix": "fevent",
    "body": "const factory ${TM_FILENAME_BASE/(.*)/${1:/pascalcase}/g}.${1:eventName}($2) = _${1/(.*)/${1:/capitalize}/};\n$3"
  },
  "New freezed event.when helper function": {
    "prefix": "feventwhen",
    "body": [
      "Stream<${TM_FILENAME_BASE/(.*)(?=_bloc)(_bloc)/${1:/pascalcase}/g}State> _map${1:event}ToState($2) async* {",
      "${3}",
      "}"
    ]
  },
  "New freezed event.map helper function": {
    "prefix": "feventmap",
    "body": [
      "Stream<${TM_FILENAME_BASE/(.*)(?=_bloc)(_bloc)/${1:/pascalcase}/g}State> _map${1:event}ToState(_${1:eventClass} event) async* {",
      "${3}",
      "}"
    ]
  }
}

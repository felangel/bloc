---
import { Code, Tabs, TabItem } from '@astrojs/starlight/components';

const installDartTesting = `
# Add testing dependencies to your Dart project.
dart pub add dev:test dev:bloc_test
`;
const installFlutterTesting = `
# Add testing dependencies to your Flutter project.
flutter pub add dev:test dev:bloc_test
`;
---

<Tabs>
	<TabItem label="Dart">
		<Code code={installDartTesting} lang="bash" />
	</TabItem>
	<TabItem label="Flutter">
		<Code code={installFlutterTesting} lang="bash" />
	</TabItem>
</Tabs>
